<div class="sign-container">
<div class="sign-up-wrap">

<div class="signup-form-container ">

<h1 class="text-color">OTP Verification</h1>

<%= form_with url: users_otp_verifications_path, method: :post do %>
  <%= hidden_field_tag :user_id, params[:user_id],class:'text-white' %>

  <div class="actions">
    <%= label_tag :otp, class:'text-white' %><br/>
    <%= text_field_tag :otp%>
  </div>

  <div class="actions mt-4">
    <%= submit_tag "Verify OTP",class:'text-white button-color' %>
    <%= button_to 'Resend OTP', resend_otp_path(user_id: params[:user_id]), method: :post ,class:'button-color text-white'%>
  </div>
<% end %>

</div>
</div>
</div>
