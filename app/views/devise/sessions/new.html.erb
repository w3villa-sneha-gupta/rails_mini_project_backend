<div class="sign-up-wrap">

  <div class="p-3 bg-light rounded shadow">
    <h2 class="text-center">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="form-group mb-2">
        <%= f.label :email, class: 'form-label' %>
        <br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group w-100 mb-2">
        <%= f.label :password, class: 'form-label' %>
        <br/>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check mb-2">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>

      <div class="form-group text-center w-100">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block w-100' %>
      </div>

      <% if flash[:alert] %>
        <div class="text-center">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="text-center">
          <%= flash[:notice] %>
        </div>
      <% end %>
    <% end %>

    <div class="social-login">
    <%= link_to user_google_oauth2_omniauth_authorize_path, class: 'btn btn-light border py-2 w-100 rounded-pill mt-3 d-flex align-items-center justify-content-center text-primary', aria: { label: 'Sign Up with Google' } do %>
      <svg class="me-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="25px">
        <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24c0,11.045,8.955,20,20,20c11.045,0,20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z" />
        <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z" />
        <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z" />
        <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z" />
      </svg>
      Sign in with Google
    <% end %>  
    <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-light border py-2 w-100 rounded-pill mt-3 d-flex align-items-center justify-content-center text-primary', aria: { label: 'Sign Up with GitHub' } do %>
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
      <path d="M22 12.07c0-5.5-4.5-10-10-10S2 6.57 2 12.07c0 5.23 3.88 9.55 8.9 10.55v-7.4H7.9v-3h3V9.62c0-3 1.8-4.63 4.55-4.63 1.3 0 2.43.1 2.76.14v3.2h-1.9c-1.5 0-1.8.71-1.8 1.76v2.3h3.6l-.5 3h-3.1v7.4c5.02-1 8.9-5.32 8.9-10.55z" fill="#4267B2"/>
    </svg>
      Sign in with Facebook
    <% end %>
  </div>
   <div class="form-group text-center mt-2 mb-3">
   Not a User?<br/>
   <%= link_to "Sign up", new_registration_path(resource_name) %>
   </div>
  </div>

</div>
