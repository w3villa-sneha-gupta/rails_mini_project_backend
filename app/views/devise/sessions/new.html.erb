<div class="sign-up-wrap">
<div class="signup-form-container d-flex align-items-center justify-content-center vh-100">
  <div class="login-box p-4 bg-light rounded shadow">
    <h2 class="text-center mb-4">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-form' }) do |f| %>
      <div class="form-group mb-3">
        <%= f.label :email, class: 'form-label' %>
        <br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>

      <div class="form-group mt-3 w-100 mb-3">
        <%= f.label :password, class: 'form-label' %>
        <br/>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group form-check mt-3 mb-3">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, class: 'form-check-label' %>
        </div>
      <% end %>

      <div class="form-group text-center mt-2 mb-3">
        <%= f.submit "Log in", class: 'btn btn-primary btn-block' %>
      </div>

      <% if flash[:alert] %>
        <div class="alert alert-danger text-center mt-3">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <% if flash[:notice] %>
        <div class="alert alert-success text-center mt-3">
          <%= flash[:notice] %>
        </div>
      <% end %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
</div>
